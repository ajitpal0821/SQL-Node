<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Users</title>

</head>
<style>
    table,
    th,
    tr,
    td {
        border: 1px solid black;
    }
</style>

<body>
    <h1> User Info</h1>
    <form method="get" action="/user/addUser">
        <button>Add user</button>
    </form>
    <table>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Email</th>
            <th>Edit</th>
             <th>Delete</th>
        </tr>
        <% for(let user of ans){%>
            <tr>
                <!-- for -->
                <td>
                    <%=user.id%>
                </td>
                <td>
                    <%=user.username%>
                </td>
                <td>
                    <%=user.email%>
                </td>
                <td>
                    <form method="get" action="/user/<%=user.id%>/edit">
                        <button>Edit</button>
                    </form>
                </td>
                <td>
                    <form method="post" action="/user/<%=user.id%>/?_method=Delete">
                        <button>Delete</button>
                    </form>
                </td>
            </tr>
            <%}%>
    </table>
</body>

</html>